# Unity Build Automation Configuration
# Copy this file to .env and update with your Unity installation path

# Windows example:
UNITY_PATH="C:/Program Files/Unity/Hub/Editor/2021.3.16f1/Editor/Unity.exe"

# macOS example:
# UNITY_PATH="/Applications/Unity/Hub/Editor/2021.3.16f1/Unity.app/Contents/MacOS/Unity"

# Linux example:
# UNITY_PATH="/home/username/Unity/Hub/Editor/2021.3.16f1/Editor/Unity"

# Note: Use forward slashes (/) even on Windows for cross-platform compatibility
# The path should point to the Unity executable, not just the installation folder

# How to find your Unity installation:
# 1. Open Unity Hub
# 2. Go to Installs tab
# 3. Click the three dots (...) next to your Unity version
# 4. Select "Show in Explorer/Finder"
# 5. Navigate to the Unity executable as shown in the examples above

# ==============================================================================
# Pre-build Hook Configuration (Optional)
# ==============================================================================
# Execute a custom Unity method before building
# Format: ClassName.MethodName
# Example: BuildHooks.SwitchToProduction
PRE_BUILD_HOOK=""

# ==============================================================================
# WebGL FTP Upload Configuration (Optional)
# ==============================================================================
# Enable automatic FTP upload after WebGL builds
WEBGL_FTP_ENABLED=false

# FTP server connection details
WEBGL_FTP_HOST="ftp.example.com"
WEBGL_FTP_PORT=21
WEBGL_FTP_USERNAME="your-username"
WEBGL_FTP_PASSWORD="your-password"

# Remote directory path on FTP server (where WebGL files will be uploaded)
WEBGL_FTP_REMOTE_PATH="/public_html/games"

# Use FTPS (FTP over TLS) for secure transfers
WEBGL_FTP_USE_TLS=false

# Verify SSL certificate (set to false for self-signed certificates)
WEBGL_FTP_VERIFY_CERT=true

# Overwrite existing files on FTP server (recommended for updates)
WEBGL_FTP_OVERWRITE=true

# ==============================================================================
# Windows Google Drive Upload Configuration (Optional)
# ==============================================================================
# Enable automatic Google Drive upload after Windows builds
WINDOWS_GDRIVE_ENABLED=false

# Google Drive settings (see docs/GoogleCredentialsSetup.md for setup guide)
GDRIVE_CREDENTIALS_FILE="credentials.json"
GDRIVE_FOLDER_ID="your-google-drive-folder-id"

# ==============================================================================
# Email Notification Configuration (Optional)
# ==============================================================================
# Send email notifications when builds are uploaded
EMAIL_ENABLED=false

# SMTP server settings (Gmail example shown)
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME="your-email@gmail.com"
# Use app-specific password, not your regular password (see setup guide)
EMAIL_SMTP_PASSWORD="your-app-password"

# Email addresses
EMAIL_FROM="your-email@gmail.com"
# Multiple recipients separated by comma
EMAIL_TO="recipient1@example.com,recipient2@example.com"

# Email subject prefix (optional) - helps identify different build variants
# Examples: "Recorder", "VR", "Main Game", "Level Editor", "Dev Build", "QA Build"
# The email subject will be: "{prefix} - Unity Windows Build Ready - v{version}"
# Leave empty for default subject without prefix
EMAIL_SUBJECT_PREFIX=""